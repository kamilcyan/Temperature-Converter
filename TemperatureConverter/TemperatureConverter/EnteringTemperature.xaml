<Window x:Class="TemperatureConverter.EnteringTemperature"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TemperatureConverter"
        mc:Ignorable="d"
        Title="EnteringTemperature" Height="200" Width="200" Background="Coral">
    <StackPanel VerticalAlignment="Center">
        <TextBox x:Name="EnterTemperature" Padding="10,10,10,10" Height="50" Width="100" Grid.ColumnSpan="3" Margin="46,0"/>
        <Button x:Name="EnterButton" Padding="10,10,10,10" Content="Enter" Height="50" Width="100" Grid.ColumnSpan="3" Margin="46,0" />
    </StackPanel>
</Window>
